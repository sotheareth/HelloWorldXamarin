<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Forms.SwitchPage">
    <ContentPage.Content>
        <StackLayout>
            <Switch x:Name="switch1" />
            <Label Text="Toggle" IsVisible="{Binding Source={x:Reference switch1}, Path=IsToggled}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>