<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Padding="20" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Forms.SliderPage">
    <ContentPage.Content>
        <StackLayout>
            <Slider x:Name="slider" MaximumTrackColor="Red" MinimumTrackColor="Silver" Maximum="255" Minimum="10" Value="50" />
            <Label Text="{Binding Source={x:Reference slider}, Path=Value, StringFormat='{0:N0}'}" x:Name="display" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>