<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.DataAccess.ApplicationPropertiesPage">
    <TableView Intent="Form">
        <TableRoot>
            <TableSection>
                <EntryCell x:Name="name" Text="{Binding Title}" Label="Title" Placeholder="Title" />
                <SwitchCell x:Name="notificationEnabled" Text="Notification" On="{Binding NotificationEnabled}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>